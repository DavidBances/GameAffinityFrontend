<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="270.0" prefWidth="300.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gameaffinity.view.ModifyProfileDialog">
    <Label alignment="CENTER" contentDisplay="CENTER" text="Modificar Perfil" />
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>

        <Label text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="emailField" promptText="Correo original" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Contrase単a:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordField" promptText="Contrase単a original" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Nuevo Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="newNameField" promptText="Nuevo nombre (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Nuevo Correo:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="newEmailField" promptText="Nuevo correo (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Nueva Contrase単a:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <PasswordField fx:id="newPasswordField" promptText="Nueva contrase単a (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <columnConstraints>
             <ColumnConstraints />
             <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
             <RowConstraints />
             <RowConstraints />
             <RowConstraints />
             <RowConstraints />
             <RowConstraints />
        </rowConstraints>
    </GridPane>

    <HBox alignment="center" spacing="10">
        <Button fx:id="updateButton" text="Actualizar">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="cancelButton" text="Cancelar">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>
</VBox>
