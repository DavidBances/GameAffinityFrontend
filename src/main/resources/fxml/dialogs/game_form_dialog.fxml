<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" prefHeight="170.0" prefWidth="250.0" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gameaffinity.view.GameFormView">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Button fx:id="saveButton" text="Save" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
