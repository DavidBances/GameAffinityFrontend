<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="210.0" prefWidth="310.0" stylesheets="@../../css/auth/auth_panes.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gameaffinity.view.RegisterPanelView">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" />
    </padding>

    <!-- Fila 1: Etiqueta y campo de texto para el nombre -->
    <Label layoutX="46.0" layoutY="32.0" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nameField" layoutX="117.0" layoutY="32.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <!-- Fila 2: Etiqueta y campo de texto para el correo -->
    <Label layoutX="47.0" layoutY="72.0" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="emailField" layoutX="117.0" layoutY="72.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!-- Fila 3: Etiqueta y campo de texto para la contraseÃ±a -->
    <Label layoutX="37.0" layoutY="112.0" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <PasswordField fx:id="passwordField" layoutX="117.0" layoutY="112.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- Fila 4: Botones para crear cuenta y volver -->
    <Button fx:id="createButton" layoutX="53.0" layoutY="158.0" text="Create Account" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
    <Button fx:id="backButton" layoutX="182.0" layoutY="158.0" text="Back" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
</AnchorPane>
